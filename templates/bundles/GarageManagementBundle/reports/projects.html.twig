{% extends 'base.html.twig' %}
{% import "macros/widgets.html.twig" as widgets %}

{% block page_title %}Báo cáo Lợi nhuận Gộp theo Đơn hàng{% endblock %}
{% block page_search %}{% endblock %}

{% block main %}
    <!-- Filter Period -->
    <div class="row mb-3">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4">
                            <label class="form-label">Từ ngày:</label>
                            <input type="date" id="fromDate" class="form-control" value="{{ period_from|date('Y-m-d') }}">
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">Đến ngày:</label>
                            <input type="date" id="toDate" class="form-control" value="{{ period_to|date('Y-m-d') }}">
                        </div>
                        <div class="col-md-4 d-flex align-items-end">
                            <button type="button" class="btn btn-primary me-2" onclick="updatePeriod()">
                                <i class="fas fa-sync"></i> Cập nhật
                            </button>
                            <a href="{{ path('garage_reports_dashboard', {from: period_from|date('Y-m-d'), to: period_to|date('Y-m-d')}) }}" class="btn btn-outline-secondary">
                                <i class="fas fa-tachometer-alt"></i> Dashboard
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Summary Cards -->
    <div class="row mb-4">
        <div class="col-lg-3 col-md-6">
            <div class="card">
                <div class="card-body text-center">
                    <div class="fs-3 text-primary mb-2">
                        <i class="fas fa-dollar-sign"></i>
                    </div>
                    <h6 class="text-muted">Tổng Doanh thu</h6>
                    <h4 class="mb-0">{{ total_revenue|number_format(0, '.', ',') }} VNĐ</h4>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6">
            <div class="card">
                <div class="card-body text-center">
                    <div class="fs-3 text-danger mb-2">
                        <i class="fas fa-minus-circle"></i>
                    </div>
                    <h6 class="text-muted">Tổng COGS</h6>
                    <h4 class="mb-0">{{ total_cogs|number_format(0, '.', ',') }} VNĐ</h4>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6">
            <div class="card">
                <div class="card-body text-center">
                    <div class="fs-3 text-success mb-2">
                        <i class="fas fa-chart-line"></i>
                    </div>
                    <h6 class="text-muted">Lợi nhuận Gộp</h6>
                    <h4 class="mb-0{% if total_gross_profit < 0 %} text-danger{% endif %}">{{ total_gross_profit|number_format(0, '.', ',') }} VNĐ</h4>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6">
            <div class="card">
                <div class="card-body text-center">
                    <div class="fs-3 text-info mb-2">
                        <i class="fas fa-percentage"></i>
                    </div>
                    <h6 class="text-muted">Tỷ suất Lợi nhuận</h6>
                    <h4 class="mb-0">{{ overall_gross_margin|number_format(1) }}%</h4>
                </div>
            </div>
        </div>
    </div>

    <!-- Projects Table -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">
                <i class="fas fa-project-diagram"></i>
                Chi tiết theo Đơn hàng ({{ projects_data|length }} đơn)
            </h3>
        </div>
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Tên Đơn hàng</th>
                        <th class="text-end">Doanh thu</th>
                        <th class="text-end d-none d-md-table-cell">Chi phí Nhân công</th>
                        <th class="text-end d-none d-md-table-cell">Chi phí Vật tư</th>
                        <th class="text-end d-none d-sm-table-cell">Tổng COGS</th>
                        <th class="text-end">Lợi nhuận Gộp</th>
                        <th class="text-end d-none d-lg-table-cell">Tỷ suất (%)</th>
                    </tr>
                </thead>
                <tbody>
                    {% for project in projects_data %}
                        <tr>
                            <td>
                                <strong>{{ project.project_name }}</strong>
                                <div class="d-md-none small text-muted mt-1">
                                    COGS: {{ project.total_cogs|number_format(0, '.', ',') }} VNĐ<br>
                                    Margin: {{ project.gross_margin_percent|number_format(1) }}%
                                </div>
                            </td>
                            <td class="text-end">
                                <strong>{{ project.revenue|number_format(0, '.', ',') }}</strong>
                                <small class="text-muted d-block">VNĐ</small>
                            </td>
                            <td class="text-end d-none d-md-table-cell">
                                {{ project.labor_cost|number_format(0, '.', ',') }}
                                <small class="text-muted d-block">VNĐ</small>
                            </td>
                            <td class="text-end d-none d-md-table-cell">
                                {{ project.supplies_cost|number_format(0, '.', ',') }}
                                <small class="text-muted d-block">VNĐ</small>
                            </td>
                            <td class="text-end d-none d-sm-table-cell">
                                {{ project.total_cogs|number_format(0, '.', ',') }}
                                <small class="text-muted d-block">VNĐ</small>
                            </td>
                            <td class="text-end">
                                <strong class="{% if project.gross_profit < 0 %}text-danger{% else %}text-success{% endif %}">
                                    {{ project.gross_profit|number_format(0, '.', ',') }}
                                </strong>
                                <small class="text-muted d-block">VNĐ</small>
                            </td>
                            <td class="text-end d-none d-lg-table-cell">
                                <span class="badge {% if project.gross_margin_percent < 0 %}bg-danger{% elseif project.gross_margin_percent < 10 %}bg-warning{% else %}bg-success{% endif %}">
                                    {{ project.gross_margin_percent|number_format(1) }}%
                                </span>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="7" class="text-center text-muted py-4">
                                <i class="fas fa-inbox fa-3x mb-3"></i><br>
                                Không có đơn hàng nào trong khoảng thời gian này.
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
                {% if projects_data %}
                    <tfoot class="table-secondary">
                        <tr>
                            <th>Tổng cộng ({{ projects_data|length }} đơn)</th>
                            <th class="text-end">
                                <strong>{{ total_revenue|number_format(0, '.', ',') }}</strong>
                                <small class="text-muted d-block">VNĐ</small>
                            </th>
                            <th class="text-end d-none d-md-table-cell">
                                {% set total_labor = projects_data|map(p => p.labor_cost)|reduce((a, b) => a + b) %}
                                {{ total_labor|number_format(0, '.', ',') }}
                                <small class="text-muted d-block">VNĐ</small>
                            </th>
                            <th class="text-end d-none d-md-table-cell">
                                {% set total_supplies = projects_data|map(p => p.supplies_cost)|reduce((a, b) => a + b) %}
                                {{ total_supplies|number_format(0, '.', ',') }}
                                <small class="text-muted d-block">VNĐ</small>
                            </th>
                            <th class="text-end d-none d-sm-table-cell">
                                <strong>{{ total_cogs|number_format(0, '.', ',') }}</strong>
                                <small class="text-muted d-block">VNĐ</small>
                            </th>
                            <th class="text-end">
                                <strong class="{% if total_gross_profit < 0 %}text-danger{% else %}text-success{% endif %}">
                                    {{ total_gross_profit|number_format(0, '.', ',') }}
                                </strong>
                                <small class="text-muted d-block">VNĐ</small>
                            </th>
                            <th class="text-end d-none d-lg-table-cell">
                                <span class="badge {% if overall_gross_margin < 0 %}bg-danger{% elseif overall_gross_margin < 10 %}bg-warning{% else %}bg-success{% endif %} fs-6">
                                    {{ overall_gross_margin|number_format(1) }}%
                                </span>
                            </th>
                        </tr>
                    </tfoot>
                {% endif %}
            </table>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        function updatePeriod() {
            const fromDate = document.getElementById('fromDate').value;
            const toDate = document.getElementById('toDate').value;
            
            if (fromDate && toDate) {
                window.location.href = '{{ path('garage_reports_projects') }}?from=' + fromDate + '&to=' + toDate;
            }
        }
    </script>
{% endblock %}
