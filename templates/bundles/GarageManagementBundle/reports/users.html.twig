{% extends 'base.html.twig' %}
{% import "macros/widgets.html.twig" as widgets %}

{% block page_title %}Báo cáo Hiệu quả Nhân viên{% endblock %}
{% block page_search %}{% endblock %}

{% block main %}
    <!-- Filter Period -->
    <div class="row mb-3">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4">
                            <label class="form-label">Từ ngày:</label>
                            <input type="date" id="fromDate" class="form-control" value="{{ period_from|date('Y-m-d') }}">
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">Đến ngày:</label>
                            <input type="date" id="toDate" class="form-control" value="{{ period_to|date('Y-m-d') }}">
                        </div>
                        <div class="col-md-4 d-flex align-items-end">
                            <button type="button" class="btn btn-primary me-2" onclick="updatePeriod()">
                                <i class="fas fa-sync"></i> Cập nhật
                            </button>
                            <a href="{{ path('garage_reports_dashboard', {from: period_from|date('Y-m-d'), to: period_to|date('Y-m-d')}) }}" class="btn btn-outline-secondary">
                                <i class="fas fa-tachometer-alt"></i> Dashboard
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Summary Cards -->
    <div class="row mb-4">
        <div class="col-lg-3 col-md-6">
            <div class="card">
                <div class="card-body text-center">
                    <div class="fs-3 text-success mb-2">
                        <i class="fas fa-chart-line"></i>
                    </div>
                    <h6 class="text-muted">Tổng Lợi nhuận Gộp</h6>
                    <h4 class="mb-0">{{ total_gross_profit_generated|number_format(0, '.', ',') }} VNĐ</h4>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6">
            <div class="card">
                <div class="card-body text-center">
                    <div class="fs-3 text-warning mb-2">
                        <i class="fas fa-balance-scale"></i>
                    </div>
                    <h6 class="text-muted">Điểm Hòa vốn Cá nhân</h6>
                    <h4 class="mb-0">{{ total_personal_breakeven_cost|number_format(0, '.', ',') }} VNĐ</h4>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6">
            <div class="card">
                <div class="card-body text-center">
                    <div class="fs-3 text-info mb-2">
                        <i class="fas fa-trophy"></i>
                    </div>
                    <h6 class="text-muted">Lợi nhuận Ròng</h6>
                    <h4 class="mb-0{% if total_net_profit < 0 %} text-danger{% endif %}">{{ total_net_profit|number_format(0, '.', ',') }} VNĐ</h4>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6">
            <div class="card">
                <div class="card-body text-center">
                    <div class="fs-3 text-primary mb-2">
                        <i class="fas fa-percentage"></i>
                    </div>
                    <h6 class="text-muted">Hiệu quả Tổng thể</h6>
                    <h4 class="mb-0">{{ overall_efficiency|number_format(1) }}%</h4>
                </div>
            </div>
        </div>
    </div>

    <!-- Users Table -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">
                <i class="fas fa-users"></i>
                Chi tiết theo Nhân viên ({{ users_data|length }} người)
            </h3>
        </div>
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Nhân viên</th>
                        <th class="text-end">Lợi nhuận Gộp Tạo ra</th>
                        <th class="text-end d-none d-md-table-cell">Điểm Hòa vốn Cá nhân</th>
                        <th class="text-end">Lợi nhuận Ròng</th>
                        <th class="text-end d-none d-lg-table-cell">Hiệu quả (%)</th>
                        <th class="text-center d-none d-xl-table-cell">Đánh giá</th>
                    </tr>
                </thead>
                <tbody>
                    {% for user in users_data %}
                        <tr>
                            <td>
                                <div class="d-flex align-items-center">
                                    <div class="me-3">
                                        {% if user.net_profit >= 0 %}
                                            <i class="fas fa-arrow-up text-success"></i>
                                        {% else %}
                                            <i class="fas fa-arrow-down text-danger"></i>
                                        {% endif %}
                                    </div>
                                    <div>
                                        <strong>{{ user.user_name }}</strong>
                                        <div class="d-md-none small text-muted mt-1">
                                            Điểm HV: {{ user.personal_breakeven_cost|number_format(0, '.', ',') }} VNĐ<br>
                                            Hiệu quả: {{ user.net_efficiency|number_format(1) }}%
                                        </div>
                                    </div>
                                </div>
                            </td>
                            <td class="text-end">
                                <strong>{{ user.total_gross_profit_generated|number_format(0, '.', ',') }}</strong>
                                <small class="text-muted d-block">VNĐ</small>
                            </td>
                            <td class="text-end d-none d-md-table-cell">
                                {{ user.personal_breakeven_cost|number_format(0, '.', ',') }}
                                <small class="text-muted d-block">VNĐ</small>
                            </td>
                            <td class="text-end">
                                <strong class="{% if user.net_profit < 0 %}text-danger{% else %}text-success{% endif %}">
                                    {{ user.net_profit|number_format(0, '.', ',') }}
                                </strong>
                                <small class="text-muted d-block">VNĐ</small>
                            </td>
                            <td class="text-end d-none d-lg-table-cell">
                                <span class="badge {% if user.net_efficiency < 50 %}bg-danger{% elseif user.net_efficiency < 100 %}bg-warning{% else %}bg-success{% endif %}">
                                    {{ user.net_efficiency|number_format(1) }}%
                                </span>
                            </td>
                            <td class="text-center d-none d-xl-table-cell">
                                {% if user.net_efficiency >= 150 %}
                                    <span class="badge bg-success">Xuất sắc</span>
                                {% elseif user.net_efficiency >= 120 %}
                                    <span class="badge bg-primary">Tốt</span>
                                {% elseif user.net_efficiency >= 100 %}
                                    <span class="badge bg-info">Đạt</span>
                                {% elseif user.net_efficiency >= 80 %}
                                    <span class="badge bg-warning">Cần cải thiện</span>
                                {% else %}
                                    <span class="badge bg-danger">Yếu</span>
                                {% endif %}
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="6" class="text-center text-muted py-4">
                                <i class="fas fa-inbox fa-3x mb-3"></i><br>
                                Không có nhân viên nào có hoạt động trong khoảng thời gian này.
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
                {% if users_data %}
                    <tfoot class="table-secondary">
                        <tr>
                            <th>Trung bình ({{ users_data|length }} NV)</th>
                            <th class="text-end">
                                <strong>{{ (total_gross_profit_generated / users_data|length)|number_format(0, '.', ',') }}</strong>
                                <small class="text-muted d-block">VNĐ/NV</small>
                            </th>
                            <th class="text-end d-none d-md-table-cell">
                                <strong>{{ (total_personal_breakeven_cost / users_data|length)|number_format(0, '.', ',') }}</strong>
                                <small class="text-muted d-block">VNĐ/NV</small>
                            </th>
                            <th class="text-end">
                                <strong class="{% if total_net_profit < 0 %}text-danger{% else %}text-success{% endif %}">
                                    {{ (total_net_profit / users_data|length)|number_format(0, '.', ',') }}
                                </strong>
                                <small class="text-muted d-block">VNĐ/NV</small>
                            </th>
                            <th class="text-end d-none d-lg-table-cell">
                                <span class="badge {% if overall_efficiency < 50 %}bg-danger{% elseif overall_efficiency < 100 %}bg-warning{% else %}bg-success{% endif %} fs-6">
                                    {{ overall_efficiency|number_format(1) }}%
                                </span>
                            </th>
                            <th class="d-none d-xl-table-cell"></th>
                        </tr>
                    </tfoot>
                {% endif %}
            </table>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        function updatePeriod() {
            const fromDate = document.getElementById('fromDate').value;
            const toDate = document.getElementById('toDate').value;
            
            if (fromDate && toDate) {
                window.location.href = '{{ path('garage_reports_users') }}?from=' + fromDate + '&to=' + toDate;
            }
        }
    </script>
{% endblock %}
